<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mju.bishe.mapper.CourseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mju.bishe.entity.Course">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="category" property="category" />
        <result column="type" property="type" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, category, type
    </sql>

    <select id="list" resultType="com.mju.bishe.entity.Course">
        select <include refid="Base_Column_List"/> from course
        where 1=1
        <if test="map.name != null and map.name !=''">
            and name like concat('%',#{map.name},'%')
        </if>
    </select>
</mapper>
